<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:duplicateParentState="true" >

    <TextView
        android:id="@+id/home_bottom_button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="test"
        android:textColor="@drawable/textcolor_change"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/home_bottom_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/home_bottom_button_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />
    

    <ImageView
        android:id="@+id/home_bottom_button_image_red_point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/home_bottom_button_image"
        android:layout_alignRight="@id/home_bottom_button_image"
        android:layout_marginRight="4dp"
        android:src="@mipmap/red_point"
        android:visibility="gone" />

</RelativeLayout>